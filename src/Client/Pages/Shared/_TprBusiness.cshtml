@model Client.Pages.ThirdPartyResponseInput
@using Newtonsoft.Json;
@{
    var countries =
        JsonConvert.DeserializeObject<IList<string>>(
            System.IO.File.ReadAllText("countries.json"));
}

<div class="card mb-2">
    <div class="card-body pb-0">
        <div class="form-group">
            <h4 class="card-title h4 text-uppercase">
                Business Information
            </h4>

            <div>
                <label class="text-justify mb-0"
                       style="font-weight: 500">
                    1. Your organization’s Full Legal Name, hereafter to be referred to as COMPANY
                </label>

                <input asp-for="B1"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B1"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 500">
                    2. Please provide the following information of COMPANY
                </label>
                <br />
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    a. Tax number
                </label>

                <input asp-for="B2A"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B2A"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    b. Main office address
                </label>

                <textarea asp-for="B2B"
                          class="form-control form-control-sm col-md-6">
                            </textarea>

                <span asp-validation-for="B2B"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    c. Address of any other location in the country from which COMPANY will be providing services
                    <br />
                    If none, please indicate
                </label>

                <textarea asp-for="B2C"
                          class="form-control form-control-sm col-md-6">
                            </textarea>

                <span asp-validation-for="B2C"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    d. Telephone
                </label>
                <br />
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size: smaller;">
                    d.1 Landline
                </label>

                <input asp-for="B2D1"
                       class="form-control form-control-sm col-md-6"
                       type="tel" />

                <span asp-validation-for="B2D1"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size: smaller;">
                    d.2 Cell
                </label>

                <input asp-for="B2D2"
                       class="form-control form-control-sm col-md-6"
                       type="tel" />

                <span asp-validation-for="B2D2"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    e. Email
                </label>

                <input asp-for="B2E"
                       class="form-control form-control-sm col-md-6"
                       type="email" />

                <span asp-validation-for="B2E"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    f. Website
                </label>

                <input asp-for="B2F"
                       class="form-control form-control-sm col-md-6"
                       type="url" />

                <span asp-validation-for="B2F"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 500;">
                    If COMPANY is an individual, provide the following information
                </label>
                <br />
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    a. Person's name
                </label>

                <input asp-for="B2Oa"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B2Oa"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    b. Date of birth
                </label>

                <input asp-for="B2Ob"
                       class="form-control form-control-sm col-md-6"
                       type="date" />

                <span asp-validation-for="B2Ob"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    c. ID number
                </label>

                <input asp-for="B2Oc"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B2Oc"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    d. Tax number
                </label>

                <input asp-for="B2Od"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B2Od"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 500;">
                    3. Please provide the following organizational information relating to COMPANY
                </label>
                <br />

                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    a. COMPANY business structure (e.g. corporation, partnership, etc.)
                </label>

                <input asp-for="B3A"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B3A"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    b. Approximate establishment date and legal jurisdiction of formation
                </label>
                <br />

                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size: small;">
                    b.1 Date
                </label>

                <input asp-for="B3B1"
                       class="form-control form-control-sm col-md-6"
                       type="date" />

                <span asp-validation-for="B3B1"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size: small;">
                    b.2 Jurisdiction
                </label>

                <input asp-for="B3B2"
                       class="form-control form-control-sm col-md-6"
                       type="text" />

                <span asp-validation-for="B3B2"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    c. Approximate number of employees
                </label>

                <input asp-for="B3C"
                       class="form-control form-control-sm col-md-6"
                       type="number" />

                <span asp-validation-for="B3C"
                      class="text-danger">
                </span>

            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400;">
                    d. Ownership
                </label>
                <br />
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size:smaller">
                    d.1 Does any governmental or government entity hold equity interest in the COMPANY?
                </label>

                <div class="form-check">
                    <input asp-for="B3D1A"
                           class="form-check-input"
                           type="radio"
                           id="B3D1Aa"
                           value="Yes">
                    <label class="form-check-label"
                           for="B3D1Aa">
                        Yes
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="B3D1A"
                           class="form-check-input"
                           type="radio"
                           id="B3D1Ab"
                           value="No">
                    <label class="form-check-label"
                           for="B3D1Ab">
                        No
                    </label>
                </div>

                <span asp-validation-for="B3D1A"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size:smaller">
                    If yes, the governmental’s equity interest in the COMPANY is
                </label>

                <div class="form-check">
                    <input asp-for="B3D1B"
                           class="form-check-input"
                           type="radio"
                           id="B3D1Ba"
                           value="Majority">
                    <label class="form-check-label"
                           for="B3D1Ba">
                        Majority
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="B3D1B"
                           class="form-check-input"
                           type="radio"
                           id="B3D1Bb"
                           value="Minority">
                    <label class="form-check-label"
                           for="B3D1Bb">
                        Minority
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="B3D1B"
                           class="form-check-input"
                           type="radio"
                           id="B3D1Bc"
                           value="None">
                    <label class="form-check-label"
                           for="B3D1Bc">
                        None
                    </label>
                </div>

                <span asp-validation-for="B3D1B"
                      class="text-danger">
                </span>

            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400; font-size:smaller">
                    d.2 Does the COMPANY have shares listed on a stock exchange?
                </label>

                <div class="form-check">
                    <input asp-for="B3D2"
                           class="form-check-input"
                           type="radio"
                           id="B3D2a"
                           value="Yes">
                    <label class="form-check-label"
                           for="B3D2a">
                        Yes
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="B3D2"
                           class="form-check-input"
                           type="radio"
                           id="B3D2b"
                           value="No">
                    <label class="form-check-label"
                           for="B3D2b">
                        No
                    </label>
                </div>

                <span asp-validation-for="B3D2"
                      class="text-danger">
                </span>

            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 500;">
                    4. Please provide the following business information relating to COMPANY
                </label>
                <br />

                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    a. Describe your core business activities
                </label>

                <textarea asp-for="B4A"
                          class="form-control form-control-sm col-md-6">
                            </textarea>

                <span asp-validation-for="B4A"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    b. Other operating businesses that have controlling interest in you or you control
                </label>

                <textarea asp-for="B4B"
                          class="form-control form-control-sm col-md-6">
                            </textarea>

                <span asp-validation-for="B4B"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 400">
                    c. Countries in which you operate or provide services
                </label>
                <br />
                <span style="font-size: smaller; font-style: italic;">
                    Hold CTRL/⌘ to select multiple options
                </span>
                <select asp-for="B4C"
                        class="multiselect form-control form-control-sm col-md-6"
                        multiple="multiple"
                        style="height: 10rem;">
                    @foreach (var country in countries)
                    {
                        <option value="@country">
                            @country
                        </option>
                    }
                </select>

                <span asp-validation-for="B4C"
                      class="text-danger">
                </span>
            </div>

            <div class="mt-2">
                <label class="text-justify mb-0"
                       style="font-weight: 500;">
                    5. Do you have business financial statements?
                </label>

                <div class="form-check">
                    <input asp-for="B5"
                           class="form-check-input"
                           type="radio"
                           id="B5a"
                           value="Yes">
                    <label class="form-check-label"
                           for="B5a">
                        Yes
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="B5"
                           class="form-check-input"
                           type="radio"
                           id="B5b"
                           value="No">
                    <label class="form-check-label"
                           for="B5b">
                        No
                    </label>
                </div>

                <span asp-validation-for="B5"
                      class="text-danger">
                </span>

                <label class="text-justify mb-0"
                       style="font-weight: 400; font-style:italic">
                    @*If yes, please download per page one of Questionnaire*@
                    If yes, please attach file at the top of the Questionnaire (<strong>C</strong>)
                </label>
            </div>
        </div>
    </div>
</div>