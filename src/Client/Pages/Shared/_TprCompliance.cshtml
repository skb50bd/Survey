                <div class="form-check">
                    <input asp-for="F13C"
                           class="form-check-input"
                           type="radio"
                           id="F13Ca"
                           value="Yes">
                    <label class="form-check-label"
                           for="F13Ca">
                        Yes
                    </label>
                </div>

                <div class="form-check">
                    <input asp-for="F13C"
                           class="form-check-input"
                           type="radio"
                           id="F13Cb"
