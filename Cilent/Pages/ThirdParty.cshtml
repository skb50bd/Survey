@page "{uid}"
@model Client.Pages.ThirdPartyModel
@{
    ViewData["Title"] = "Third Party Representative Questionnaire";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>
        @ViewData["Title"]
    </title>

    <meta charset="utf-8" />

    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <link rel="stylesheet"
          href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1 class="display-4 mt-2 text-center" style="font-size: 3rem;">
            Third Party Representative Questionnaire
        </h1>
        <form method="post"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>
            <input asp-for="Answers.UniqueIdentifier"
                   value="@Model.UniqueId"
                   hidden />

            <partial name="Shared/_TprIntro" />
            <partial name="Shared/_TprFormCompletion" />
            <partial name="Shared/_TprBusiness" />
            <partial name="Shared/_TprReference" />
            <partial name="Shared/_TprPersonal" />
            <partial name="Shared/_TprPotentialConflicts" />
            <partial name="Shared/_TprCompliance" />
            <partial name="Shared/_TprSubAgent" />
            <partial name="Shared/_TprSignatureAndCertification" />

            <button type="submit"
                    class="btn btn-primary">
                Submit
            </button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
